<% products.each_slice(3) do |slice| %>
    <div class="row">
        <% slice.each do |product| %>
        <div class="col-md-4">
            <div class="thumbnail">
                <%= link_to product_path(product) do %>
                <%= image_tag Faker::Placeholdit.image("640x480", 'jpg', 'cccccc') %>
                <% end %>
                <div class="caption">
                    <h3><%= link_to product.name, product %></h3>
                    <p><%= simple_format(truncate(product.description, length: 90)) %></p>
                    <p class="lead"><%= number_to_currency product.price %></p>
                    <p>
                        <%= link_to "#", class: "btn btn-primary" do %>
                        <i class="fas fa-cart-plus"></i> Dodaj do koszyka
                        <% end %>
                    </p>
                </div>
            </div>
        </div>
        <% end %>
    </div>
<% end %>